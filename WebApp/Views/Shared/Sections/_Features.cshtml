@model FeaturesSection

@{
    ViewData["Title"] = "Features";
}

<section id="features" class="features">
    <div class="container">
        <div class="section-title">
            <h1>@Model.Title</h1>
            <p>@Model.Description</p>
        </div>
        <div class="tool-features">
            @foreach(var featureBox in Model.FeatureBoxes)
            {
                <partial name="~/Views/Shared/Components/_FeatureBox.cshtml" model="featureBox" />
            }
        </div>
    </div>
</section>